@using EFDataApp.Models
@model IndexViewModel
@{
    ViewBag.Title = "Все пользователи";
}
@addTagHelper *, EFDataApp

<style>
    @@font-face {
        font-family: 'FontAwesome';
        src: url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/fonts/fontawesome-webfont.woff2') format('woff2'), url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/fonts/fontawesome-webfont.woff') format('woff'), url('https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/fonts/fontawesome-webfont.ttf') format('truetype');
        font-weight: normal;
        font-style: normal
    }

    .glyphicon {
        display: inline-block;
        font: normal normal normal 14px/1 FontAwesome;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale
    }

    .glyphicon-chevron-down:before {
        content: "\f078";
    }

    .glyphicon-chevron-up:before {
        content: "\f077";
    }
</style>
<a asp-action="Create">Добавить пользователя</a>

<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Имя: </label>
        <input name="@Model.FilterViewModel.SelectedName" class="form-control" />

        <label class="control-label">Компания: </label>
        <select name="company" asp-items="@Model.FilterViewModel.Companies" class="form-control"></select>

        <input type="submit" value="Фильтр" class="btn btn-default" />


        <h1>Список пользователей</h1>
        <table class="table">
            <tr>
                <th>
                    <sort-header action="Index" up="@Model.SortViewModel.Up"
                                 current="@Model.SortViewModel.Current" property="@Model.SortViewModel.NameSort"
                                 page-url-name="@(Model.FilterViewModel.SelectedName)"
                                 page-url-company="@(Model.FilterViewModel.SelectedCompany)"
                                 page-url-sortorder="@(Model.SortViewModel.Current)">
                        Имя
                    </sort-header>
                </th>
                <th>
                    <sort-header action="Index" up="@Model.SortViewModel.Up"
                                 current="@Model.SortViewModel.Current" property="@Model.SortViewModel.AgeSort"
                                 page-url-name="@(Model.FilterViewModel.SelectedName)"
                                 page-url-company="@(Model.FilterViewModel.SelectedCompany)"
                                 page-url-sortorder="@(Model.SortViewModel.Current)">
                        Возраст
                    </sort-header>
                </th>
                <th>
                    <sort-header action="Index" up="@Model.SortViewModel.Up"
                                 current="@Model.SortViewModel.Current" property="@Model.SortViewModel.CompanySort"
                                 page-url-name="@(Model.FilterViewModel.SelectedName)"
                                 page-url-company="@(Model.FilterViewModel.SelectedCompany)"
                                 page-url-sortorder="@(Model.SortViewModel.Current)">
                        Компания
                    </sort-header>
                </th>
            </tr>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Company.Name</td>
                    <td>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Подробнее</a> |
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a> |
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</form>

<page-link page-model="Model.PageViewModel" page-action="Index"
           page-url-name="@(Model.FilterViewModel.SelectedName)"
           page-url-company="@(Model.FilterViewModel.SelectedCompany)"
           page-url-sortorder="@(Model.SortViewModel.Current)"></page-link>
